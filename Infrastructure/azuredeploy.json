{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "Location for the resources to be deployed"
            }
        },
        "dscTemplateSpec": {
            "type": "string",
            "metadata": {
                "description": "template spec for the DSC Storage"
            }
        }
    },
    "functions": [],
    "variables": {
        "vmname": "mercuryhealthvm",
        "password": "P@ssw0rd!414"
    },
    "resources": [
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2020-06-01",
            "name": "DscStorageDeployment",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "id": "[parameters('dscTemplateSpec')]"
                }
            }
        },
        {
            "name": "vmosdiskstorage",
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2019-06-01",
            "tags": {
                "displayName": "vmOsDiskStorage"
            },
            "location": "[parameters('location')]",
            "kind": "StorageV2",
            "sku": {
                "name": "Premium_LRS",
                "tier": "Premium"
            }
        },
        {
            "name": "vmPublicIp",
            "type": "Microsoft.Network/publicIPAddresses",
            "apiVersion": "2020-07-01",
            "location": "[parameters('location')]",
            "tags": {
                "displayName": "vmPublicIp"
            },
            "properties": {
                "publicIPAllocationMethod": "Dynamic",
                "dnsSettings": {
                    "domainNameLabel": "mercuryhealth"
                }
            }
        },
        {
            "name": "vmNSG",
            "type": "Microsoft.Network/networkSecurityGroups",
            "apiVersion": "2019-11-01",
            "location": "[parameters('location')]",
            "properties": {}
        },
        {
            "name": "internalNetwork",
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2020-07-01",
            "location": "[parameters('location')]",
            "tags": {
                "displayName": "internalNetwork"
            },
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkSecurityGroups', 'vmNSG')]"
            ],
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "10.0.0.0/16"
                    ]
                },
                "subnets": [
                    {
                        "name": "DMZ",
                        "properties": {
                            "networkSecurityGroup": {
                                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', 'vmNSG')]"
                            },
                            "addressPrefix": "10.0.0.0/24"
                        }
                    },
                    {
                        "name": "Internal",
                        "properties": {
                            "addressPrefix": "10.0.1.0/24"
                        }
                    }
                ]
            }
        },
        {
            "name": "vmNic",
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2019-11-01",
            "location": "[parameters('location')]",
            "tags": {
                "displayName": "vmNic"
            },
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualNetworks', 'internalNetwork')]",
                "[resourceId('Microsoft.Network/publicIPAddresses', 'vmPublicIp')]"
            ],
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipConfig1",
                        "properties": {
                            "publicIPAddress": {
                                "id": "[resourceId('Microsoft.Network/publicIPAddresses', 'vmPublicIp')]"
                            },
                            "privateIPAllocationMethod": "Dynamic",
                            "subnet": {
                                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', 'internalNetwork', 'DMZ')]"
                            }
                        }
                    }
                ]
            }
        },
        {
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2019-07-01",
            "name": "[variables('vmname')]",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkInterfaces', 'vmNic')]",
                "[resourceId('Microsoft.Storage/storageAccounts', 'vmosdiskstorage')]"
            ],
            "properties": {
                "hardwareProfile": {
                    "vmSize": "Standard_D4s_v3"
                },
                "osProfile": {
                    "computerName": "mercury",
                    "adminUsername": "abel",
                    "adminPassword": "[variables('password')]"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "MicrosoftSQLServer",
                        "offer": "SQL2017-WS2016",
                        "sku": "SQLDEV",
                        "version": "latest"
                    },
                    "osDisk": {
                        "createOption": "FromImage",
                        "managedDisk": {
                            "storageAccountType": "Premium_LRS"
                        }
                    }
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', 'vmNic')]"
                        }
                    ]
                },
                "diagnosticsProfile": {
                    "bootDiagnostics": {
                        "enabled": false
                    }
                }
            }
        },
        {
            "type": "Microsoft.SqlVirtualMachine/sqlVirtualMachines",
            "apiVersion": "2017-03-01-preview",
            "name": "[variables('vmname')]",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Compute/virtualMachines', variables('vmname'))]"
            ],
            "properties": {
                "virtualMachineResourceId": "[resourceId('Microsoft.Compute/virtualMachines', variables('vmname'))]",
                "sqlImageOffer": "SQL2017-WS2016",
                "sqlServerLicenseType": "PAYG",
                "sqlManagement": "Full",
                "sqlImageSku": "Developer"
            }

        },
        {
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "name": "[concat(variables('vmname'), 'Microsoft.Powershell.DSC')]",
            "apiVersion": "2018-06-01",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Compute/virtualMachines',variables('vmname'))]",
                "[resourceId('Microsoft.Resources/deployments', 'DscStorageDeployment')]"
            ],
            "properties": {
                "publisher": "Microsoft.Powershell",
                "type": "DSC",
                "typeHandlerVersion": "2.83",
                "autoUpgradeMinorVersion": true,
                "settings": {
                    "wmfVersion": "latest",
                    "configuration": {
                        "url": "https://optcdsc.blob.core.windows.net/configurations/MercHealthConfig.ps1.zip",
                        "script": "MercHealthConfig.ps1",
                        "function": "MercuryHealthWeb"
                    }
                },
                "protectedSettings": {
                    "configurationArguments": {
                        "AppPoolCredential": {
                            "userName": "abel",
                            "password": "[variables('password')]"
                        }
                    }
                }
            }
        }
    ],
    "outputs": {
        "hostname": {
            "type": "string",
            "value": "[reference(resourceId('Microsoft.Network/publicIPAddresses', 'vmPublicIp')).dnsSettings.fqdn]"
        },
        "ip": {
            "type": "string",
            "value": "[reference(resourceId('Microsoft.Network/publicIPAddresses', 'vmPublicIp')).ipAddress]"
        },
        "configuration_storage": {
            "type": "string",
            "value": "[concat(reference(resourceId('Microsoft.Storage/storageAccounts','optcdsc')).primaryEndpoints.blob, 'configurations')]"
        }
    }
}